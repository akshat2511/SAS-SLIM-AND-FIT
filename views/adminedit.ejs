<!DOCTYPE html>
<head>
    <title>
        Enter User Data
    </title>
</head>
<body>
  <style>
    body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f2f2f2;
        }

        .form-container {
            width: 350px;
            background-color: #fff;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
            border-radius: 10px;
            box-sizing: border-box;
            padding: 20px 30px;
        }

        .title {
            text-align: center;
            font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
                "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
            margin: 10px 0 30px 0;
            font-size: 28px;
            font-weight: 800;
        }

        .form {
            display: flex;
            flex-direction: column;
            gap: 18px;
            margin-bottom: 15px;
        }

        .input {
            border-radius: 20px;
            border: 1px solid #c0c0c0;
            outline: 0 !important;
            box-sizing: border-box;
            padding: 12px 15px;
        }

        .form-btn {
            padding: 10px 15px;
            font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
                "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
            border-radius: 20px;
            border: 0 !important;
            outline: 0 !important;
            background: teal;
            color: white;
            cursor: pointer;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .form-btn:active {
            box-shadow: none;
        }

        select.input {
            appearance: none;
            padding: 12px 15px;
            border-radius: 20px;
            border: 1px solid #c0c0c0;
            outline: 0 !important;
            background-color: white;
            font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
                "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
            cursor: pointer;
        }

        .buttons-container {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            margin-top: 20px;
            gap: 15px;
        }
        /* New styles for images */
        .left-image {
            position: absolute;
            top: 25%;
            left: -20px;
            transform: translateY(-20%);
        }

       
  </style>
  
  <div class="form-container">
        <img src="./assets/images/undraw_data_input_fxv2.svg" alt="Left Image" class="left-image"> <!-- Replace 'left_image.jpg' with your left image file -->

    <p class="title">Your Details</p>
    <form class="form" method="post" action="/admin/edituser/<%=userData.id%>/?_method=PATCH">
      <input type="text" class="input" name="username" placeholder="Name" value="<%=userData.name%>"/> 
      <input type="number" class="input" name = "age" placeholder="Age" value="<%=userData.age%>"/> 
      <select class="input" name="gender"> 
        <option disabled selected hidden><%=userData.gender%></option>
        <option value="male">Male</option>
        <option value="female">Female</option>
        <option value="other">Other</option>
      </select>
      <input type="number" class="input" name="height" placeholder="Height (in cm)" value="<%=userData.height%>"/> 
      <input type="number" class="input" name ="weight" placeholder="Weight (in kg)" value="<%=userData.weight%>"/> 
      <input type="tel" class="input" name = "phoneno" placeholder="Phone Number" value="<%=userData.phoneno%>"/>
      <label for="state" >Select a state:</label>
      <select id="state" name="state" class="input" value="<%=userData.state%>">
        <option><%=userData.state%></option>
    </select>
    <!-- Options will be added dynamically using JavaScript -->
  </select>
      <input type="text" class="input" name ="reffered" placeholder="How Did You Hear About US!" value="<%=userData.refer%>" required/>
      <button class="form-btn">Click to Edit</button>
    </form>
    
  </div>
      
  <script>
    
    // Array of Indian states
    const indianStates = [
      "Andaman and Nicobar Islands", "Andhra Pradesh", "Arunachal Pradesh", "Assam", "Bihar", "Chandigarh", "Chhattisgarh",
      "Dadra and Nagar Haveli and Daman and Diu", "Delhi", "Goa", "Gujarat", "Haryana", "Himachal Pradesh", "Jammu and Kashmir",
      "Jharkhand", "Karnataka", "Kerala", "Ladakh", "Lakshadweep", "Madhya Pradesh", "Maharashtra", "Manipur", "Meghalaya",
      "Mizoram", "Nagaland", "Odisha", "Puducherry", "Punjab", "Rajasthan", "Sikkim", "Tamil Nadu", "Telangana", "Tripura",
      "Uttar Pradesh", "Uttarakhand", "West Bengal"
    ];

    // Get the select element for states
    const selectState = document.getElementById('state');

    // Add options to the select element for states
    indianStates.forEach(state => {
      const option = document.createElement('option');
      option.textContent = state;
      selectState.appendChild(option);
    });
  </script>
</body>
</html>