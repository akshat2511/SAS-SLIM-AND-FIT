    <title>Admin Dashboard Panel</title>

    <!----======== CSS ======== -->
    <link rel="stylesheet" href="../public/style.css">

    <!----===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <title>Admin Dashboard Panel</title>
</head>

<body>
    <nav>
        <div class="logo-name">
            <div class="logo-image">
                <img src="images/logo.png" alt="">
            </div>

            <span class="logo_name">CodingLab</span>
        </div>

        <div class="menu-items">
            <ul class="nav-links">
                <li id="dashboard"><a href="#">
                        <i class="uil uil-estate"></i>
                        <span class="link-name">Dashboard</span>
                    </a></li>
                <li><a href="#">
                        <i class="uil uil-files-landscapes"></i>
                        <span class="link-name">Content</span>
                    </a></li>
                <li id="analytics"><a href="#">
                        <i class="uil uil-chart"></i>
                        <span class="link-name">Analytics</span>
                    </a></li>
                <li id="messagebroadcast"><a href="#">
                    <i class="fa-regular fa-message"></i>
                        <span class="link-name">Message BroadCast</span>
                    </a></li>
                <li><a href="#">
                        <i class="uil uil-comments"></i>
                        <span class="link-name">Message</span>
                    </a></li>

            </ul>

            <ul class="logout-mode">
                <li><a href="#">
                        <i class="uil uil-signout"></i>
                        <span class="link-name">Logout</span>
                    </a></li>

                <li class="mode">
                    <a href="#">
                        <i class="uil uil-moon"></i>
                        <span class="link-name">Dark Mode</span>
                    </a>

                    <div class="mode-toggle">
                        <span class="switch"></span>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>

            <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here...">
            </div>

            <!--<img src="images/profile.jpg" alt="">-->
        </div>

        <div class="dash-content">
            <div class="overview">
                <div class="title">
                    <i class="uil uil-tachometer-fast-alt"></i>
                    <span class="text">Dashboard</span>
                </div>

                <div class="boxes">
                    <div class="box box1">
                        <i class="uil uil-thumbs-up"></i>
                        <span class="text">Users</span>
                        <span class="number">
                            <%=totalUsers.length%>
                        </span>
                    </div>
                    <div class="box box2">
                        <i class="uil uil-comments"></i>
                        <span class="text">Number of Logins</span>
                        <span class="number"></span>
                    </div>
                    <div class="box box3">
                        <i class="uil uil-share"></i>
                        <span class="text">Age Group</span>
                        <span class="number">54</span>
                    </div>
                </div>
            </div>


        </div>

        <div class="activity">
            <div class="title">
                <i class="uil uil-clock-three"></i>
                <span class="text">User Details</span>
            </div>
            <div class="activity-data">
                <table>
                    <thead>
                        <tr>
                            <th class="names">Name</th>
                            <th class="email">Email</th>
                            <th class="joined">Phone No.</th>
                            <th class="type">Gender</th>
                            <th class="status">Referrals</th>
                            <th class="status">Height</th>
                            <th class="status">Weight</th>
                            <th class="status">Age</th>
                            <th class="Delete">Delete User</th>
                            <th class="Edit">Edit User</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% totalUsers.forEach((data) => { %>
                        <tr>
                            <td class="names"><span class="data-title"><%= data.name %></span></td>
                            <td class="email"><span class="data-title"><%= data.email %></span></td>
                            <td class="joined"><span class="data-title"><%= data.phoneno %></span></td>
                            <td class="type"><span class="data-title"><%= data.gender %></span></td>
                            <td class="status"><span class="data-title"><%= data.refer %></span></td>
                            <td class="status"><span class="data-title"><%= data.height %></span></td>
                            <td class="status"><span class="data-title"><%= data.weight %></span></td>
                            <td class="status"><span class="data-title"><%= data.age %></span></td>
                            <td class="status"><span class="data-delete">
                                <form method="post" action="/admin/<%=data.id %>?_method=DELETE">
                                    <button class="buttonuser" role="button">DELETE</button>
                                </form>
                               
                            </td>
                            <td class="status"><span class="data-edit">
                                <form method="get" action="/admin/edituser/<%= data.id%>">
                                    <button class="buttonuser" role="button">Edit!</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                
            </div>
        </div>
        
        <div class = "messagebroadcastdiv">
            <form action="">
                <textarea></textarea>
                <button type="submit">Submit Message</button>
            </form>
        </div>
    </section>

    <!--yaha se kaam-->
    
    

    <script src="../public/script.js"></script>
</body>

</html>